<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/title"
        android:textColor="#42f5e9"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/etEmployeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="Employee Name"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/etEmployeeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Employee ID"
        android:layout_below="@+id/etEmployeeName"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Amount"
        android:layout_below="@+id/etEmployeeId"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/etPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Priority"
        android:layout_below="@+id/etPurpose"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:id="@+id/etPurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAmount"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Purpose"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/requestSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPriority"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#42f5e9"
        android:text="SUBMIT" />
</RelativeLayout>